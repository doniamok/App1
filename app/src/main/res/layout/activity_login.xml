<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".login">

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="50dp"
            android:text="@string/text_second"
            android:textAlignment="center"
            android:textColor="@color/blue_max"
            android:textSize="30sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:text="@string/text_third"
            android:textAlignment="center"
            android:textColor="@color/text_box"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="284dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="40dp"
            android:paddingTop="20dp"
            android:paddingRight="40dp">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/box1"
                android:padding="10dp"
                android:textColor="@color/cardview_light_background"
                android:textSize="20sp"
                android:background="@drawable/edit_style"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:drawableRight="@drawable/ic_not_visible_interface_symbol_of_an_eye_with_a_slash_on_it_icon_icons_com_57783"
                android:hint="@string/box2"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/cardview_light_background"
                android:textSize="20sp"
                android:background="@drawable/edit_style"/>


            <Button
                android:id="@+id/login"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="@string/login_text"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:background="@drawable/login_button"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_hint"
                android:layout_width="170dp"
                android:layout_height="54dp"
                android:gravity="center"
                android:text="@string/text_hint"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/sign_in"
                android:layout_width="74dp"
                android:layout_height="58dp"
                android:backgroundTint="@color/white"
                android:gravity="center"
                android:onClick="sign_in"
                android:text="@string/btn_sign"
                android:textColor="@color/blue_max"
                android:textSize="12sp" />


        </LinearLayout>
</LinearLayout>